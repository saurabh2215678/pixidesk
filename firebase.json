  "hosting" : {
    "public" : "public",
    "rewrites" : [{
      "source" : "**",
      "function" : "app"
    }]
  },

  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
